<div class="container">
  <div class="login-fullpage">
    <div class="row">
      <div class="login-logo background-block">
        <%=image_tag('non-admin/special/login.jpg', alt: '', class: 'center-image') %>
      </div>

      <div class="col-xs-12 col-sm-7">
        <div class="f-login-content">
          <div class="f-login-header">
            <div class="f-login-title color-dr-blue-2">Welcome!</div>
            <div class="f-login-desc color-grey">Please register your account</div>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'f-login-form' }) do |f| %>

              <label class="date optional">Account Info</label>
              <div class="row">
                <div class='col-md-4 col-lg-4'>
                  <%= f.input :first_name, require: true, placeholder: t('.first_name'), label: false %>
                </div>
                <div class='col-md-4 col-lg-4'>
                  <%= f.input :middle_name, require: true, placeholder: t('.middle_name'), label: false, error: true %>
                </div>
                <div class='col-md-4 col-lg-4'>
                  <%= f.input :last_name, require: true, placeholder: t('.last_name'), label: false %>
                </div>
              </div>

              <%= f.input :email, required: true, autofocus: true, placeholder: t('.place_holder_email'), label: false %>

              <%= f.input :password, required: true, placeholder: t('.place_holder_password'), label: false %>

              <%= f.input :password_confirmation, required: true, placeholder: t('.confirm_password'), label: false %>

              <label class="date optional">Personal Info</label>
              <div class="row">
                <div class="col-md-7">
                  <%= f.input :phone, require: false, placeholder: t('.phone_number'), label: false, error: false,:pattern => "\d{3}[\-]\d{3}[\-]\d{4}" %>
                </div>
                <div class="col-md-5">
                  <%= f.input :gender, require: true, collection: [[t('.male'), true], [t('.female'), false]] ,prompt: t('.select_gender'), input_html: {class: 'selectpicker col-md-12'},label: false, error: true  %>
                </div>
              </div>
              <%= f.label :birthday  %>
              <%= f.input :birthday, as: :date, start_year: Date.today.year - 90,
                          end_year: Date.today.year - 12, discard_day: false,
                          order: [:day, :month, :year], prompt: { day: t('.select_day'), month: t('.select_month'), year: t('.select_year')}, input_html: {class: 'col-md-4'}, label: false  %>


              <%#= f.label :graduation_date  %>
              <%#= f.input :graduation_date, as: :date, start_year: Date.today.year - 10,
                          end_year: Date.today.year + 8, discard_day: false,
                          order: [:day, :month, :year], prompt: { day: t('.select_day'), month: t('.select_month'), year: t('.select_year')}, input_html: {class: 'col-md-4 selectpicker'}, label: false, error: false  %>

              <br />
              <br />
              <input type="submit" class="login-btn c-button full b-60 bg-dr-blue-2 hv-dr-blue-2-o" value='<%= t(".register_account") %>' data-disable-with="Registering...">
              <a href="#" class="c-button full b-60 bg-blue-7 hv-blue-7-o"><i class="fa fa-facebook"></i><span>login via facebook</span></a>

              <div class="text-center small" style="margin-top:20px;">
                You have account? <%= link_to 'Log in', new_session_path(resource_name), :class => 'text-primary' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
