<div class="container">
  <div class="login-fullpage">
    <div class="row">
      <div class="login-logo background-block">
        <%=image_tag('non-admin/special/login.jpg', alt: '', class: 'center-image') %>
      </div>
      <div class="col-xs-12 col-sm-7">
        <div class="f-login-content">
          <div class="f-login-header">
            <div class="f-login-title color-dr-blue-2">Welcome back!</div>
            <div class="f-login-desc color-grey"><%= t('.desc_login') %></div>
          </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'f-login-form' }) do |f| %>
              <%=devise_error_messages! %>
              <div class="input-style-1 b-50 type-2 color-5">
                <%= f.input :email, required: true, autofocus: true, placeholder: t('.placeholder_email'), label: false %>
              </div>
              <div class="input-style-1 b-50 type-2 color-5">
                <%= f.input :password, required: true, placeholder: t('.placeholder_password'), label: false %>
              </div>
              <div class="checkbox-group">
                <div class="input-entry color-3">
                  <input class="checkbox-form" id="text-2" type="checkbox" name="user[remember_me]" value="climat control">
                  <label class="clearfix" for="text-2">
                    <span class="sp-check"><i class="fa fa-check"></i></span>
                    <span class="checkbox-text">Remember me</span>
                  </label>
                </div>
              </div>
              <input type="submit" class="login-btn c-button full b-60 bg-dr-blue-2 hv-dr-blue-2-o"  value='<%= t('.login')%>' data-disable-with="Log in">
              <a href="#" class="c-button full b-60 bg-blue-7 hv-blue-7-o"><i class="fa fa-facebook"></i><span>login via facebook</span></a>
          <% end %>

          <div class="text-center small" style="margin-top:20px;">
            <%= link_to 'Sign up', new_registration_path(resource_name), :class => 'text-primary' %> |
            <%= link_to 'Forgot your password?', new_password_path(resource_name) %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
