<%= simple_form_for @organization, :url => school_organizations_path(@school.slug), html: {remote: true} do |f| %>
    <div class="modal-body">
      <%= f.input :name %>
      <%= f.input :web_address %>
      <%= f.input :phone %>
      <%= f.input :address %>

      <div class="row">
        <div class="col-sm-6">
          <%= f.association :country, prompt: 'Country', :input_html => {:class => 'multiselect'} %>
        </div>
        <div class="col-sm-6">
          <%= f.association :state, prompt: 'State', :input_html => {:class => 'multiselect'} %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <%= f.input :city %>
        </div>
        <div class="col-sm-6">
          <%= f.input :zip %>
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <%= f.submit 'Submit', class: 'btn btn-primary', 'data-disable-with' => 'Submitting...' %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
<% end %>

<%= render :partial => 'admin/partials/scripts/country_state_script', :locals => {:form_name => 'organization'} %>
