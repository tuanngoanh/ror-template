# PostgreSQL. Versions 9.1 and up are supported.

default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>

development:
  <<: *default
  database: rails5
  username: postgres
  password: admin
  host: 127.0.0.1

test:
  <<: *default
  database: rails5_test


production:
  <<: *default
  database: rails5_prod
